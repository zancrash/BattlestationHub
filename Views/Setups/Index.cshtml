@model IEnumerable<BattlestationHub.Models.Setup>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Share your Battlestation</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SetupName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SetupName)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImgPath))
                {
                        <img src="@(item.ImgPath)" alt="Current Image" />
                }
                else
                {
                    <p>No image available</p>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">View</a>
            </td>
        </tr>
}
    </tbody>
</table>
